rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write to their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow users to update only specific fields in their profile
      match /{document=**} {
        allow update: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'photoURL', 'updatedAt']);
      }
    }

    // Snippets collection security rules
    match /snippets/{snippetId} {
      // Allow read access if the snippet is public or the user is the owner
      allow read: if resource.data.visibility == 'public' || 
                 (request.auth != null && resource.data.ownerId == request.auth.uid);
      
      // Only the owner can modify their snippets
      allow create: if request.auth != null && 
                   request.resource.data.ownerId == request.auth.uid &&
                   request.resource.data.title is string &&
                   request.resource.data.language is string &&
                   request.resource.data.code is string &&
                   (request.resource.data.visibility == 'public' || 
                    request.resource.data.visibility == 'private');
      
      allow update, delete: if request.auth != null && 
                           resource.data.ownerId == request.auth.uid;
      
      // Nested subcollections
      match /{document=**} {
        allow read: if resource.data.visibility == 'public' || 
                   (request.auth != null && resource.data.ownerId == request.auth.uid);
        
        allow write: if request.auth != null && 
                     resource.data.ownerId == request.auth.uid;
      }
    }

    // Comments on snippets
    match /comments/{commentId} {
      allow read: if true; // Anyone can read comments
      
      // Only authenticated users can create comments
      allow create: if request.auth != null && 
                   request.resource.data.userId == request.auth.uid &&
                   request.resource.data.text is string &&
                   request.resource.data.text.size() > 0 &&
                   request.resource.data.text.size() <= 1000;
      
      // Users can only delete their own comments
      allow delete: if request.auth != null && 
                   resource.data.userId == request.auth.uid;
    }

    // Rate limiting rule
    match /rateLimits/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // Only server-side code can write to rate limits
    }
  }
}
